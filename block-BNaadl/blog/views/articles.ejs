<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style>
      .container {
        margin: 0 auto;
        width: 500px;
        height: 500px;
        padding: 32px;
      }
      h1 {
        text-align: center;
        font-size: 50px;
      }
      h2 {
        text-align: left;
        color: rgb(142, 142, 237);
        margin: 10px;
      }
    </style>
  </head>
  <body>
    <header>
      <a href="/articles/new">
        <button>Add Article</button>
      </a>
    </header>
    <div class="container">
      <h1>List of Articles</h1>
      <% articles.forEach(article => { %>
      <a href="/articles/<%= article.id %>">
        <h2><%= article.title %></h2>
      </a>

      <% }) %>
    </div>
  </body>
</html>
